<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- wizard action form view -->
        <record id="view_form_receivable_report_wizard" model="ir.ui.view">
            <field name="name">receivable.report.wizard</field>
            <field name="model">wizard.receivable.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name='partner_ids' string="Customers" widget="many2many_tags" />
                        <field name='from_date' />
                        <field name='to_date' />
                        <field name='tag_ids' widget="many2many_tags" />
                        <field name='branch_ids' widget="many2many_tags" />
                        <field name='township_ids' widget="many2many_tags" />
                        <field name='state_ids' widget="many2many_tags" />
                    </group> 
                    <footer>
                        <button string="Print(XLS)" name="generate_excel_report" type="object" 
                            class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>