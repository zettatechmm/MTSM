<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="picking_batch_backdate_wizard_view_form" model="ir.ui.view">
        <field name="name">picking.batch.backdate.wizard.view</field>
        <field name="model">picking.batch.backdate.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="picking_batch_ids" widget="many2many_tags" invisible="1" />
                            <field name="scheduled_date" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" name="assign_backdate" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
